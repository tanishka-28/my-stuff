// Electric switch simulation
#include <stdio.h>

int main() {
    int number;
    printf("Enter the number either 1 or 0: ");
    scanf("%d",&number);
    
    switch(number) {
        case 1:
        printf("Switch is ON");
        break;
        case 0:
        printf("Switch is OFF");
        break;
        default:
        printf("invalid number");
    }
    return 0;
}
